 @model List<Patient>


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Patient List</h2>
            </div>
            <h5 class="text-white">Total Patient: @ViewBag.ClientCount</h5>
            
        </div>
    </div>
    <div class=" card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Patient
                    </a>
                </div>
            </div>
            <table id="tblData" class="table table-bordered table-striped">
                <thead>

                    <tr>
                        <th>
                            Patient Id
                        </th>
                        <th>
                            Patient Name
                        </th>
                        <th>
                            Email Id
                        </th>
                        <th>
                            Mobile No.
                        </th>
                        <th>
                            Age
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Guardian
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Resion
                        </th>
                        <th>
                            Depatment
                        </th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Id))
                    {
                        <tr>
                            <td>@obj.Id</td>
                            <td>@obj.Name</td>
                            <td>@obj.Email</td>
                            <td>@obj.Phone</td>
                            <td>@obj.Age</td>
                            <td>@obj.Gender</td>
                            <td>@obj.Guardian</td>
                            <td>@obj.Address</td>
                            <td>@obj.Resion</td>
                            <td>@obj.Depatment</td>
                            
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Patient" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Patient" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



